{{ form_label(form.proposals) }}
<div id="{{ form.vars.id }}">
    <ul class="widget_poll_form_questions_collection" data-index="{{ form.proposals|length }}" data-prototype="{{ _self.widget_prototype(form.proposals.vars.prototype)|e }}">
        {% for child in form.proposals %}
            {{ _self.widget_prototype(child) }}
        {% endfor %}
    </ul>
    <a href="#"  class="vic-btn vic-btn-default widget_poll_form_add_question">
        Ajouter
    </a>
</div>
{% do form.proposals.setRendered %}

{% macro widget_prototype(form) %}
    <li>
        {{ form_widget(form) }}
        {% spaceless %}
            <a href="#" class="vic-btn -square -framed vic-btn-danger widget_poll_form_remove_question">
                <i class="fa fa-trash-o"></i>
            </a>
        {% endspaceless %}
    </li>
{% endmacro %}
{{ form_rest(form) }}
